{
  "version": 2,
  "builds": [
    {
      "src": "migrate.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "templates"
      }
    },
    {
      "src": "core/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "installCommand": "pip install -r requirements.txt" 
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/core/wsgi.py"
    }
  ]
}
